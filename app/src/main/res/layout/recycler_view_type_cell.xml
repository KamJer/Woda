<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <EditText
        android:id="@+id/editTextType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/app_name"
        android:inputType="text"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/buttonColorPicker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/color_type_button_shape"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextType"
        app:layout_constraintEnd_toStartOf="@+id/buttonRemoveType"
        android:contentDescription="TODO"
        />

    <ImageButton
        android:id="@+id/buttonRemoveType"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/baseline_backspace_24"
        app:layout_constraintWidth_percent="0.13"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="TODO"
        />



</androidx.constraintlayout.widget.ConstraintLayout>