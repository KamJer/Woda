<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/buttonShapeableGlass"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:contentDescription="TODO"
        android:scaleType="fitCenter"
        app:shapeAppearanceOverlay="@style/circle"
        />

    <com.kamjer.woda.activity.mainactivity.addwaterdialog.view.ImageWaterInGlass
        android:id="@+id/buttonShapeableWater"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:contentDescription="TODO"
        android:scaleType="fitCenter"
        app:shapeAppearanceOverlay="@style/circle"
        />

    <TextView
        android:id="@+id/textAmountWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonShapeableGlass"
        android:layout_alignStart="@+id/buttonShapeableGlass"
        android:layout_alignEnd="@+id/buttonShapeableGlass"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:text="test"
        android:textAlignment="center"
        android:textColor="@color/dark_grey" />
</RelativeLayout>