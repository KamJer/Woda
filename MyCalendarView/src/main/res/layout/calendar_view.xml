<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/buttonPreviousMonth"
        android:src="@drawable/left_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/textViewYear"
        android:text="Year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="8sp"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/textViewMonth"
        android:text="Month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewYear"
        android:padding="8sp"
        android:textSize="25sp"
        />

    <GridLayout
        android:id="@+id/daysNamesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="7"
        android:layout_below="@+id/textViewMonth">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/monday"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_columnSpan="1"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tuesday"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_columnSpan="1"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/wednesday"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_columnSpan="1"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/thursday"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_columnSpan="1"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/friday"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_columnSpan="1"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/saturday"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_columnSpan="1"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sunday"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_columnSpan="1"
            android:textSize="20sp"
            />

    </GridLayout>


    <ImageButton
        android:id="@+id/buttonNextMonth"
        android:src="@drawable/left_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:scaleX="-1"
        />

    <com.kamjer.mycalendarview.DaysOfMonthView
        android:id="@+id/daysOfMonth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/daysNamesLayout"
        />

</RelativeLayout>